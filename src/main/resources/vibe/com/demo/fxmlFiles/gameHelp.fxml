<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="vibe.com.demo.controller.GameHelpController"
            prefWidth="1300" prefHeight="800"
            
            styleClass="root-pane">
  <!-- NAVIGATION TOP -->
  <top>
    <HBox spacing="32" alignment="CENTER_LEFT" styleClass="nav-bar">
      <Button text="⟵ Quay Lại" styleClass="nav-button" onAction="#backToLobbyView"/>
      <HBox spacing="12" alignment="CENTER_LEFT">
        <ImageView fitWidth="40" fitHeight="40" preserveRatio="true" pickOnBounds="true">
          <image>
            <Image url="@../assets/img/question.png"/>
          </image>
        </ImageView>
        <Label text="Hướng Dẫn Chơi" styleClass="nav-title"/>
      </HBox>
    </HBox>
  </top>

  <!-- MAIN CONTENT: ScrollPane -> HBox (centered) -> VBox(content) -->
  <center>
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="scroll-pane">
      <content>
        <!-- HBox làm vùng chứa để căn giữa nội dung cố định rộng 1000 -->
        <HBox alignment="CENTER">
          <VBox spacing="32" alignment="TOP_CENTER" prefWidth="1000" maxWidth="1000" styleClass="content-box">
            <!-- Section: Bắt Đầu Nhanh -->
            <VBox spacing="16" styleClass="section-modal">
              <HBox spacing="12" alignment="CENTER_LEFT">
                <ImageView fitWidth="32" fitHeight="32" preserveRatio="true" pickOnBounds="true">
                  <image>
                    <Image url="@../assets/img/rocket.png"/>
                  </image>
                </ImageView>
                <Label text="Bắt Đầu Nhanh" styleClass="section-title-green"/>
              </HBox>
              <VBox spacing="10">
                <Label text="Dùng phím A / D hoặc mũi tên để di chuyển paddle." wrapText="true" styleClass="body-text" maxWidth="860">
                  <graphic>
                    <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                      <image>
                        <Image url="@../assets/img/number-1.png"/>
                      </image>
                    </ImageView>
                  </graphic>
                </Label>
                <Label text="Nhấn SPACE để phóng bóng." wrapText="true" styleClass="body-text" maxWidth="860">
                  <graphic>
                    <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                      <image>
                        <Image url="@../assets/img/two.png"/>
                      </image>
                    </ImageView>
                  </graphic>
                </Label>
                <Label text="Phá hết khối để qua level tiếp theo." wrapText="true" styleClass="body-text" maxWidth="860">
                  <graphic>
                    <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                      <image>
                        <Image url="@../assets/img/number-3.png"/>
                      </image>
                    </ImageView>
                  </graphic>
                </Label>
              </VBox>
            </VBox>
            <!-- Section: Luật Chơi -->
            <VBox spacing="16" styleClass="section-modal">
              <HBox spacing="12" alignment="CENTER_LEFT">
                <ImageView fitWidth="32" fitHeight="32" preserveRatio="true" pickOnBounds="true">
                  <image>
                    <Image url="@../assets/img/game.png"/>
                  </image>
                </ImageView>
                <Label text="Luật Chơi Cơ Bản" styleClass="section-title-blue"/>
              </HBox>
              <VBox spacing="10">
                <Label text="Mục tiêu: Phá hủy tất cả khối để hoàn thành level." wrapText="true" styleClass="body-text" maxWidth="860">
                  <graphic>
                    <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                      <image>
                        <Image url="@../assets/img/target.png"/>
                      </image>
                    </ImageView>
                  </graphic>
                </Label>
                <Label text="Mạng sống: Bạn có 3 mạng. Mất mạng khi bóng rơi xuống." wrapText="true" styleClass="body-text" maxWidth="860">
                  <graphic>
                    <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                      <image>
                        <Image url="@../assets/img/heart.png"/>
                      </image>
                    </ImageView>
                  </graphic>
                </Label>
                <Label text="Tính điểm: Combo tăng nhân điểm. Kiếm coins để mua paddle/ avatar." wrapText="true" styleClass="body-text" maxWidth="860">
                  <graphic>
                    <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                      <image>
                        <Image url="@../assets/img/100.png"/>
                      </image>
                    </ImageView>
                  </graphic>
                </Label>
              </VBox>
            </VBox>
            <!-- Section: Power-ups (đưa lên trước Mẹo Chơi) -->
            <VBox spacing="16" styleClass="section-modal">
              <HBox spacing="12" alignment="CENTER_LEFT">
                <ImageView fitWidth="32" fitHeight="32" preserveRatio="true">
                  <image>
                    <Image url="@../assets/img/power-up.png"/>
                  </image>
                </ImageView>
                <Label text="Power-ups" styleClass="section-title-yellow"/>
              </HBox>
              <GridPane hgap="20" vgap="20" alignment="CENTER">
                <!-- row 1 -->
                <VBox styleClass="powerup-card" GridPane.columnIndex="0" alignment="CENTER" spacing="10" prefWidth="200">
                  <ImageView fitWidth="42" fitHeight="42" preserveRatio="true">
                    <image>
                      <Image url="@../assets/img/multiply_ball.png"/>
                    </image>
                  </ImageView>
                  <Label text="Đa Bóng" styleClass="card-title"/>
                  <Label alignment="CENTER" text="Thêm nhiều bóng" wrapText="true" styleClass="card-text" maxWidth="160"/>
                </VBox>
                <VBox styleClass="powerup-card" GridPane.columnIndex="1" alignment="CENTER" spacing="10" prefWidth="200">
                  <ImageView fitWidth="42" fitHeight="42" preserveRatio="true">
                    <image>
                      <Image url="@../assets/img/measure.png"/>
                    </image>
                  </ImageView>
                  <Label text="Paddle Lớn" styleClass="card-title"/>
                  <Label alignment="CENTER" text="Tăng kích thước" wrapText="true" styleClass="card-text" maxWidth="160"/>
                </VBox>
                <VBox styleClass="powerup-card" GridPane.columnIndex="2" alignment="CENTER" spacing="10" prefWidth="200">
                  <ImageView fitWidth="42" fitHeight="42" preserveRatio="true">
                    <image>
                      <Image url="@../assets/img/heart.png"/>
                    </image>
                  </ImageView>
                  <Label text="Mạng" styleClass="card-title"/>
                  <Label alignment="CENTER" text="Cộng 1 mạng" wrapText="true" styleClass="card-text" maxWidth="160"/>
                </VBox>
                <VBox styleClass="powerup-card" GridPane.columnIndex="3" alignment="CENTER" spacing="10" prefWidth="200">
                  <ImageView fitWidth="42" fitHeight="42" preserveRatio="true">
                    <image>
                      <Image url="@../assets/img/magnet.png"/>
                    </image>
                  </ImageView>
                  <Label text="Từ Tính" styleClass="card-title"/>
                  <Label alignment="CENTER" text="Bóng dính paddle" wrapText="true" styleClass="card-text" maxWidth="160"/>
                </VBox>
                <!-- row 2 -->
                <VBox styleClass="powerup-card" GridPane.rowIndex="1" GridPane.columnIndex="0" alignment="CENTER" spacing="10" prefWidth="200">
                  <ImageView fitWidth="42" fitHeight="42" preserveRatio="true">
                    <image>
                      <Image url="@../assets/img/fire.png"/>
                    </image>
                  </ImageView>
                  <Label text="Bóng Lửa" styleClass="card-title"/>
                  <Label alignment="CENTER" text="Xuyên qua khối" wrapText="true" styleClass="card-text" maxWidth="160"/>
                </VBox>
                <VBox styleClass="powerup-card" GridPane.rowIndex="1" GridPane.columnIndex="1" alignment="CENTER" spacing="10" prefWidth="200">
                  <ImageView fitWidth="42" fitHeight="42" preserveRatio="true">
                    <image>
                      <Image url="@../assets/img/coin.png"/>
                    </image>
                  </ImageView>
                  <Label text="Vàng" styleClass="card-title"/>
                  <Label alignment="CENTER" text="Gia tăng lượng vàng " wrapText="true" styleClass="card-text" maxWidth="160"/>
                </VBox>
                <VBox styleClass="powerup-card" GridPane.rowIndex="1" GridPane.columnIndex="2" alignment="CENTER" spacing="10" prefWidth="200">
                  <ImageView fitWidth="42" fitHeight="42" preserveRatio="true">
                    <image>
                      <Image url="@../assets/img/turtle.png"/>
                    </image>
                  </ImageView>
                  <Label text="Chậm" styleClass="card-title"/>
                  <Label alignment="CENTER" text="Làm chậm bóng" wrapText="true" styleClass="card-text" maxWidth="160"/>
                </VBox>
              </GridPane>
            </VBox>
            <!-- Section: Mẹo Chơi Hay (2 cột) -->
          </VBox>
        </HBox>
      </content>
    </ScrollPane>
  </center>
</BorderPane>
