<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.canvas.Canvas?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="vibe.com.demo.controller.GameViewController"
            fx:id="rootPane"
            prefWidth="1300" prefHeight="800"
            minWidth="1300" minHeight="800"
            styleClass="root"
          >
  <!-- Main Game Area -->
  <center>
    <StackPane styleClass="left-area">
      <!--Elements -->
      <StackPane fx:id="gameArea" styleClass="game-area" maxWidth="900" maxHeight="700">
        <Canvas fx:id="gameCanvas" width="900" height="700"/>
      </StackPane>
    </StackPane>
  </center>

  <!-- Right Sidebar -->
  <right>
    <VBox spacing="20" styleClass="sidebar" prefWidth="320">
      <!-- Game Info -->
      <VBox spacing="12" styleClass="modal">
        <Label text="Game Info" styleClass="panel-title"/>
        <HBox spacing="10">
          <Label text="Coins:" styleClass="sub-title"/>
          <Label fx:id="coinLabel" text="0" styleClass="highlight"/>
          <ImageView fitWidth="20" fitHeight="20">
            <image>
              <Image url="@../assets/img/coin.png"/>
            </image>
          </ImageView>
        </HBox>
        <HBox spacing="10">
          <Label text="Level:" styleClass="sub-title"/>
          <Label fx:id="levelLabel" text="1" styleClass="highlight"/>
        </HBox>
        <HBox spacing="10">
          <Label text="Lives:" styleClass="sub-title"/>
          <HBox fx:id="livesBox" spacing="6">
            <Label text="â¤" styleClass="life"/>
            <Label text="â¤" styleClass="life"/>
            <Label text="â¤" styleClass="life"/>
          </HBox>
        </HBox>
      </VBox>
      <!-- Controls -->
      <VBox spacing="12" styleClass="modal">
        <Label text="Controls" styleClass="panel-title"/>
        <HBox spacing="10">
          <Label text="Move:" styleClass="sub-title"/>
          <Label text="â†/â†’" styleClass="content"/>
        </HBox>
        <HBox spacing="10">
          <Label text="Launch/Pause:" styleClass="sub-title"/>
          <Label text="SPACE" styleClass="content"/>
        </HBox>
        <HBox spacing="10">
          <Label text="Restart:" styleClass="sub-title"/>
          <Label text="R" styleClass="content"/>
        </HBox>
      </VBox>
      <!-- Buttons -->
      <VBox spacing="12">
        <Button fx:id="changePaddleBtn" text="ðŸ›’ Go to Shop" styleClass="pause-btn" onAction="#handleChangePaddle" alignment="CENTER" minWidth="300"/>
        <Button fx:id="menuButton" text="âŒ‚ Back to Menu" styleClass="menu-btn" onAction="#backToLevelMenu" alignment="CENTER" minWidth="300"/>
      </VBox>
      <!-- Quick Tips -->
      <VBox spacing="10" styleClass="modal">
        <Label text="Quick Tips" styleClass="panel-title-green"/>
        <Label text="â€¢ Destroy all blocks to complete level" styleClass="sub-title"/>
        <Label text="â€¢ Hit ball with paddle edges" styleClass="sub-title"/>
        <Label text="â€¢ Keep the ball in play" styleClass="sub-title"/>
      </VBox>
      <!-- Complete button -->
      <StackPane styleClass="background-next-btn" minWidth="300">
        <Button fx:id="nextButton" styleClass="next-btn" 
                                                                                                                                                                                                                                                                                                                                                                  alignment="CENTER" minWidth="260" onAction="#handleNextLevel"/>
      </StackPane>
    </VBox>
  </right>
</BorderPane>
